<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/lightWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.settings.productDetail.ProfileProductDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/xxhdpi_5"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/xxhdpi_20"
            android:padding="@dimen/xxhdpi_5"
            app:cardCornerRadius="5dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/xxhdpi_5"
                android:layout_marginTop="@dimen/xxhdpi_10"
                android:layout_marginBottom="@dimen/xxhdpi_10"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/prof_product_img"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/xxhdpi_100"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ezywire_blue_icon"
                    android:contentDescription="TODO" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_prod_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xxhdpi_5"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/ubuntu_bold"
                    android:layout_marginBottom="@dimen/xxhdpi_20"
                    android:textSize="@dimen/t_xxh_18"
                    android:textColor="@color/txt_blue"
                    android:text="@string/device_id"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/prod_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/xxhdpi_20"
                    android:layout_marginRight="@dimen/xxhdpi_20"
                    android:fontFamily="@font/ubuntu_normal"
                    android:textSize="@dimen/t_xxh_12"
                    android:textAllCaps="true"
                    android:textColor="@color/txt_light"
                    android:text="@string/device_id"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/xxhdpi_10"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/xxhdpi_10"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu_normal"
                        android:textSize="@dimen/t_xxh_14"
                        android:textAllCaps="true"
                        android:textColor="@color/txt_clr"
                        android:text="@string/device_id"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_prod_detail_device_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu_bold"
                        android:textSize="@dimen/t_xxh_14"
                        android:textColor="@color/txt_blue"
                        android:text="@string/device_id"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/xxhdpi_10"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu_normal"
                        android:textSize="@dimen/t_xxh_14"
                        android:textAllCaps="true"
                        android:textColor="@color/txt_clr"
                        android:text="@string/tid"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_prod_detail_tid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_bold"
                        android:layout_weight="1"
                        android:textSize="@dimen/t_xxh_14"
                        android:textColor="@color/txt_blue"
                        android:text="@string/tid"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/xxhdpi_10"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu_normal"
                        android:textSize="@dimen/t_xxh_14"
                        android:textAllCaps="true"
                        android:textColor="@color/txt_clr"
                        android:text="@string/ezyauth_enabled"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_prod_detail_ezyauth_enabled"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_bold"
                        android:layout_weight="1"
                        android:textSize="@dimen/t_xxh_14"
                        android:textColor="@color/txt_blue"
                        android:text="@string/ezyauth_enabled"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/xxhdpi_10"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_normal"
                        android:layout_weight="1"
                        android:textSize="@dimen/t_xxh_14"
                        android:textAllCaps="true"
                        android:textColor="@color/txt_clr"
                        android:text="@string/expiry_date"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_prod_detail_expiry_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu_bold"
                        android:textSize="@dimen/t_xxh_14"
                        android:textColor="@color/txt_blue"
                        android:text="@string/expiry_date"/>

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>