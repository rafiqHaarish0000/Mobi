<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/coordinatorLayout"
    android:background="@color/white"
    tools:context=".ui.settings.profileProductList.ProfileProductListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:scaleType="fitXY"
            android:src="@drawable/mobi_keyboard"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/open_settings_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Settings"
            android:background="@drawable/rect_circle"
            android:backgroundTint="@color/colorPrimary"
            android:elevation="@dimen/xxhdpi_5"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="@dimen/xxhdpi_20"
            android:paddingRight="@dimen/xxhdpi_20"
            android:layout_marginTop="@dimen/xxhdpi_20"/>

    </LinearLayout>

</FrameLayout>