<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/ic_login_bg">

    <RelativeLayout
        android:id="@+id/signup_relative"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/xxhdpi_20"
        android:layout_marginRight="@dimen/xxhdpi_20"
        android:layout_height="60dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back_sign_up"
            android:layout_width="@dimen/xxhdpi_30"
            android:layout_height="@dimen/xxhdpi_30"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_back"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/mobi_white_logo"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/signup_relative"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/xxhdpi_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/xxhdpi_20"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/user_details_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/xxhdpi_20"
                        android:layout_marginTop="@dimen/xxhdpi_10"
                        android:layout_marginRight="@dimen/xxhdpi_20"
                        android:layout_marginBottom="@dimen/xxhdpi_10"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_timeline_one"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_normal"
                            android:text="Create Account"
                            android:gravity="center"
                            android:letterSpacing=".1"
                            android:textColor="#414040"
                            android:textSize="16sp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/xxhdpi_10"
                            android:fontFamily="@font/ubuntu_normal"
                            android:text="It will take less than a minute."
                            android:lineSpacingMultiplier="1.3"
                            android:lineSpacingExtra="1.3dp"
                            android:letterSpacing=".08"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/xxhdpi_10"
                            android:layout_marginRight="@dimen/xxhdpi_10"
                            android:textColor="#888888"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_fullname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/xxhdpi_20"
                            android:backgroundTint="#888888"
                            android:drawableStart="@drawable/ic_user"
                            android:drawableLeft="@drawable/ic_user"
                            android:drawablePadding="@dimen/xxhdpi_10"
                            android:fontFamily="@font/ubuntu_normal"
                            android:hint="*Full Name"
                            android:inputType="textCapCharacters"
                            android:textAllCaps="true"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:textColor="@color/txt_clr"
                            android:textColorHint="#848484"
                            android:textSize="@dimen/t_xxh_14" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/xxhdpi_20"
                            android:backgroundTint="#888888"
                            android:drawableStart="@drawable/ic_mail"
                            android:drawableLeft="@drawable/ic_user"
                            android:drawablePadding="@dimen/xxhdpi_10"
                            android:fontFamily="@font/ubuntu_normal"
                            android:hint="*Email Address"
                            android:singleLine="true"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:textColor="@color/txt_clr"
                            android:textColorHint="#848484"
                            android:textSize="@dimen/t_xxh_14" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/xxhdpi_10"
                            android:backgroundTint="#888888"
                            android:drawableStart="@drawable/ic_key"
                            android:drawableLeft="@drawable/ic_key"
                            android:drawablePadding="@dimen/xxhdpi_10"
                            android:fontFamily="@font/ubuntu_normal"
                            android:hint="*Password"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:inputType="textPassword"
                            android:textColor="@color/txt_clr"
                            android:textColorHint="#848484"
                            android:textSize="@dimen/t_xxh_14" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_cpassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/xxhdpi_10"
                            android:backgroundTint="#888888"
                            android:drawableStart="@drawable/ic_conf_password"
                            android:drawableLeft="@drawable/ic_conf_password"
                            android:drawablePadding="@dimen/xxhdpi_10"
                            android:fontFamily="@font/ubuntu_normal"
                            android:hint="*Confirm password"
                            android:singleLine="true"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:textColor="@color/txt_clr"
                            android:textColorHint="#848484"
                            android:textSize="@dimen/t_xxh_14" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/button_dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/xxhdpi_10"
                            android:backgroundTint="#888888"
                            android:drawableStart="@drawable/ic_calendar"
                            android:drawableLeft="@drawable/ic_calendar"
                            android:drawablePadding="@dimen/xxhdpi_10"
                            android:fontFamily="@font/ubuntu_normal"
                            android:hint="Date of Birth"
                            android:maxLines="1"
                            android:visibility="gone"
                            android:focusableInTouchMode="false"
                            android:editable="false"
                            android:inputType="date"
                            android:textColor="@color/txt_clr"
                            android:textColorHint="#848484"
                            android:textSize="@dimen/t_xxh_14" />



                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/xxhdpi_10"
                            android:backgroundTint="#888888"
                            android:drawableStart="@drawable/ic_key"
                            android:drawableLeft="@drawable/ic_key"
                            android:drawablePadding="@dimen/xxhdpi_10"
                            android:fontFamily="@font/ubuntu_normal"
                            android:hint="@string/activation_code"
                            android:maxLines="1"
                            android:visibility="gone"
                            android:singleLine="true"
                            android:textColor="@color/txt_clr"
                            android:textColorHint="#848484"
                            android:textSize="@dimen/t_xxh_14" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/xxhdpi_10"
                            android:layout_marginBottom="@dimen/xxhdpi_5">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_centerVertical="true"
                                android:background="#888888" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/circle_white"
                                android:gravity="center"
                                android:text="or"
                                android:letterSpacing="0.08"
                                android:textColor="@color/txt_grey" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="@dimen/xxhdpi_60"
                                android:layout_height="@dimen/xxhdpi_60">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/facebook_img"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/circle_shadow"
                                    android:padding="15dp"
                                    android:src="@drawable/ic_facebook" />

                                <com.facebook.login.widget.LoginButton
                                    android:id="@+id/login_button"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:background="@android:color/transparent"
                                    android:visibility="invisible" />

                            </RelativeLayout>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/google_img"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="@dimen/xxhdpi_40"
                                android:background="@drawable/circle_shadow"
                                android:padding="15dp"
                                android:src="@drawable/ic_google" />

                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/button_next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rect_bor"
                            android:backgroundTint="#005ea6"
                            android:layout_gravity="end"
                            android:layout_marginTop="@dimen/xxhdpi_10"
                            android:fontFamily="@font/ubuntu_bold"
                            android:paddingLeft="@dimen/xxhdpi_30"
                            android:paddingTop="@dimen/xxhdpi_10"
                            android:paddingRight="@dimen/xxhdpi_30"
                            android:paddingBottom="@dimen/xxhdpi_10"
                            android:text="Next"
                            android:drawableLeft="@drawable/ic_send"
                            android:drawablePadding="@dimen/xxhdpi_20"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/activation_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/xxhdpi_20"
                        android:layout_marginTop="@dimen/xxhdpi_10"
                        android:layout_marginRight="@dimen/xxhdpi_20"
                        android:layout_marginBottom="@dimen/xxhdpi_10"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/xxhdpi_100"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="@dimen/xxhdpi_5"
                            android:src="@drawable/ic_activation"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/ubuntu_normal"
                            android:textSize="@dimen/t_xxh_18"
                            android:textColor="@color/txt_black"
                            android:layout_marginTop="@dimen/xxhdpi_10"
                            android:text="@string/activation_code"/>

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_activationcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="@dimen/xxhdpi_10"
                            android:textColor="@color/txt_black"
                            android:textColorHighlight="@color/txt_grey"
                            android:backgroundTint="@color/colorPrimary"
                            android:fontFamily="@font/ubuntu_normal"
                            android:hint="Enter the Activation Code"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/submit_btn_activation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/submit"
                            android:backgroundTint="@color/colorPrimary"
                            android:textColor="@color/white"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/forgot_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/xxhdpi_20"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/xxhdpi_20"
                        android:layout_marginTop="@dimen/xxhdpi_10"
                        android:layout_marginRight="@dimen/xxhdpi_20"
                        android:layout_marginBottom="@dimen/xxhdpi_10"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/xxhdpi_100"
                            android:layout_height="@dimen/xxhdpi_100"
                            android:layout_gravity="center"
                            android:src="@drawable/forget_password_icon"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:fontFamily="@font/ubuntu_normal"
                            android:text="@string/yo_forget"
                            android:textColor="#414040"
                            android:letterSpacing=".08"
                            android:textSize="@dimen/t_xxh_18"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/xxhdpi_10"
                            android:fontFamily="@font/ubuntu_normal"
                            android:lineSpacingMultiplier="1.5"
                            android:gravity="center"
                            android:lineSpacingExtra="0.5dp"
                            android:letterSpacing=".08"
                            android:text="No worries, Just Enter your \nemail and username"
                            android:textColor="#888888"
                            android:textSize="@dimen/t_xxh_14" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_username_forgot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/xxhdpi_10"
                            android:backgroundTint="#888888"
                            android:drawableStart="@drawable/ic_user"
                            android:drawableLeft="@drawable/ic_user"
                            android:drawablePadding="@dimen/xxhdpi_10"
                            android:fontFamily="@font/ubuntu_normal"
                            android:hint="User Name"
                            android:maxLines="1"
                            android:textColor="@color/txt_clr"
                            android:textColorHint="#848484"
                            android:textSize="@dimen/t_xxh_14" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_email_forgot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/gap_15"
                            android:backgroundTint="#888888"
                            android:maxLines="1"
                            android:drawableStart="@drawable/ic_mail"
                            android:drawableLeft="@drawable/ic_mail"
                            android:drawablePadding="@dimen/xxhdpi_10"
                            android:fontFamily="@font/ubuntu_normal"
                            android:hint="Email Address"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/txt_clr"
                            android:textColorHint="#848484"
                            android:textSize="@dimen/t_xxh_14" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/btn_submit_forgot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/xxhdpi_10"
                            android:background="@drawable/rect_bor"
                            android:backgroundTint="@color/colorPrimary"
                            android:fontFamily="@font/ubuntu_bold"
                            android:paddingLeft="@dimen/xxhdpi_20"
                            android:paddingTop="@dimen/xxhdpi_10"
                            android:paddingRight="@dimen/xxhdpi_20"
                            android:paddingBottom="@dimen/xxhdpi_10"
                            android:text="Send"
                            android:layout_gravity="center"
                            android:drawableLeft="@drawable/ic_send"
                            android:drawablePadding="@dimen/xxhdpi_10"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/xxhdpi_10"
                            android:layout_marginBottom="@dimen/xxhdpi_10"
                            android:gravity="center">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ubuntu_normal"
                                android:text="Remember Password?"
                                android:textColor="@color/txt_clr"
                                android:textSize="@dimen/t_xxh_16" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_login"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/xxhdpi_5"
                                android:fontFamily="@font/ubuntu_bold"
                                android:text="Login"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/t_xxh_16"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>