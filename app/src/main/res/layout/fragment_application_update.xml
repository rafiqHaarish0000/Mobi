<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/white"
    tools:context=".ui.settings.applicationUpdate.ApplicationUpdateFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/xxhdpi_20">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/update_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/t_xxh_18"
            android:fontFamily="@font/ubuntu_normal"
            android:textColor="@color/txt_blue"
            android:layout_above="@id/update_img"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/xxhdpi_40"
            android:textStyle="bold"
            android:text="App  Update is not Available"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/update_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_downloads"
            android:layout_centerInParent="true"
            android:contentDescription="TODO" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/update_img"
            android:layout_marginTop="@dimen/xxhdpi_20"
            android:orientation="vertical">



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/update_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:paddingLeft="@dimen/xxhdpi_20"
            android:paddingRight="@dimen/xxhdpi_20"
            android:textColor="@color/white"
            android:fontFamily="@font/ubuntu_bold"
            android:background="@drawable/rect_bor"
            android:backgroundTint="@color/colorPrimary"
            android:layout_below="@+id/update_txt"
            android:layout_marginTop="@dimen/xxhdpi_20"
            android:layout_gravity="center"/>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>