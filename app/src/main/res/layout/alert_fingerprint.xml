<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="@dimen/xxhdpi_10"
    android:paddingRight="@dimen/xxhdpi_10"
    android:background="#cc8b8b8b">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/xxhdpi_10">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/alert_close_button"
                android:layout_width="@dimen/xxhdpi_20"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/xxhdpi_10"
                android:src="@drawable/ic_close" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/referal_txt"
                    android:layout_marginTop="@dimen/xxhdpi_30"
                    android:layout_marginBottom="@dimen/xxhdpi_20"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fingerprint Authentication"
                        android:textColor="#3c3c3c"
                        android:fontFamily="@font/ubuntu_bold"
                        android:textSize="@dimen/t_xxh_18"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/xxhdpi_10"
                        android:text="Please use fingerprint authenticate"
                        android:textColor="#888888"
                        android:textSize="@dimen/t_xxh_14" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/alert_finger_img"
                        android:layout_width="@dimen/xxhdpi_100"
                        android:layout_height="@dimen/xxhdpi_100"
                        android:layout_marginTop="@dimen/xxhdpi_20"
                        android:padding="@dimen/xxhdpi_10"
                        android:src="@drawable/fingerprint"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/alert_finger_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/xxhdpi_10"
                        android:text="Touch the fingerprint sensor"
                        android:textColor="#888888"
                        android:textSize="@dimen/t_xxh_14" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>