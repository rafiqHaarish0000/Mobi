<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_login_bg">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/t_xxh_28"
        android:layout_margin="@dimen/xxhdpi_30"
        android:fontFamily="@font/ubuntu_bold"
        android:letterSpacing="0.1"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Revolution in \nOnline Payment"
        android:src="@drawable/mobi_white_logo" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/login_logo"
        android:layout_marginTop="@dimen/xxhdpi_20"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="6">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/xxhdpi_20"
                android:layout_weight="2"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/bottom_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xxhdpi_30"
                    android:layout_marginRight="@dimen/xxhdpi_20"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/login_tutorial_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_tutorial" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/xxhdpi_20"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="TUTORIAL"
                            android:textColor="#a0ccff"
                            android:textSize="@dimen/t_xxh_16" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_chat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/xxhdpi_30"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="-11dp"
                            android:src="@drawable/ic_chat" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/xxhdpi_20"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="MOBI CHAT"
                            android:textColor="#a0ccff"
                            android:textSize="@dimen/t_xxh_16" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/login_contact_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/xxhdpi_30"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_support" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/xxhdpi_20"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/ubuntu_bold"
                            android:paddingLeft="@dimen/xxhdpi_5"
                            android:text="SUPPORT"
                            android:textColor="#a0ccff"
                            android:textSize="@dimen/t_xxh_16" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/login_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/xxhdpi_30"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_support" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/xxhdpi_20"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/ubuntu_bold"
                            android:paddingLeft="@dimen/xxhdpi_5"
                            android:text="LOGIN"
                            android:textColor="#a0ccff"
                            android:textSize="@dimen/t_xxh_16" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/xxhdpi_60"
                    android:contentDescription="@string/app_name"
                    android:letterSpacing="0.08"
                    android:src="@drawable/mobi_white_logo"
                    android:text="mobi"
                    android:textColor="@color/white"
                    android:textSize="50sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:scrollbars="none">

                <RelativeLayout
                    android:id="@+id/data_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/xxhdpi_20"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/xxhdpi_20"
                        app:cardElevation="1dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/sign_up_contact_linear"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/xxhdpi_20"
                                android:visibility="gone"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/xxhdpi_30"
                                    android:text="Welcome!"
                                    android:fontFamily="@font/ubuntu_normal"
                                    android:gravity="center"
                                    android:textSize="@dimen/t_xxh_26"
                                    android:textColor="#414040"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/xxhdpi_20"
                                    android:layout_marginBottom="@dimen/xxhdpi_20"
                                    android:text="Sign up to Get Started"
                                    android:fontFamily="@font/ubuntu_normal"
                                    android:gravity="center"
                                    android:textSize="@dimen/t_xxh_18"
                                    android:textColor="#888888"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/xxhdpi_10"
                                    android:layout_marginBottom="@dimen/xxhdpi_20"
                                    android:text="Country"
                                    android:drawablePadding="@dimen/xxhdpi_10"
                                    android:drawableLeft="@drawable/ic_flag"
                                    android:fontFamily="@font/ubuntu_normal"
                                    android:textSize="@dimen/t_xxh_22"
                                    android:textColor="#848484"/>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/xxhdpi_60"
                                    android:background="#f5f5f5"
                                    android:orientation="vertical">

                                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                        android:id="@+id/spinner_country_signup"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="3dp"
                                        android:backgroundTint="@color/colorPrimary"
                                        android:gravity="center" />

                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/xxhdpi_30"
                                    android:weightSum="3">

                                    <androidx.appcompat.widget.AppCompatEditText
                                        android:id="@+id/edt_country_code_sign_up"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.75"
                                        android:hint="code"
                                        android:fontFamily="@font/ubuntu_normal"
                                        android:maxLines="1"
                                        android:editable="false"
                                        android:inputType="none"
                                        android:backgroundTint="@color/white"
                                        android:textColorHint="#848484"
                                        android:textColor="#707070"
                                        android:textSize="@dimen/t_xxh_20" />

                                    <androidx.appcompat.widget.AppCompatEditText
                                        android:id="@+id/edt_phone_num_sign_up"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2.25"
                                        android:inputType="number"
                                        android:backgroundTint="@color/white"
                                        android:hint="Enter Phone Number"
                                        android:maxLines="1"
                                        android:textColorHint="#848484"
                                        android:textColor="#707070"
                                        android:textSize="@dimen/t_xxh_20" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:background="@color/grey"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_marginTop="@dimen/xxhdpi_30"
                                    android:layout_marginBottom="@dimen/xxhdpi_10">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="@dimen/gap_15"
                                        android:layout_height="@dimen/gap_15"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_tick"/>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:textStyle="bold"
                                        android:layout_marginLeft="@dimen/xxhdpi_10"
                                        android:text="@string/sent_verification"
                                        android:textColor="#3caa2c"
                                        android:textSize="@dimen/t_xxh_14" />

                                </LinearLayout>



                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/btn_send_sign_up"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/xxhdpi_20"
                                    android:layout_marginBottom="@dimen/xxhdpi_20"
                                    android:background="@drawable/rect_bor"
                                    android:backgroundTint="@color/button_bg"
                                    android:fontFamily="@font/ubuntu_bold"
                                    android:paddingLeft="@dimen/xxhdpi_20"
                                    android:paddingTop="@dimen/xxhdpi_10"
                                    android:paddingRight="@dimen/xxhdpi_20"
                                    android:paddingBottom="@dimen/xxhdpi_10"
                                    android:text="Send"
                                    android:layout_gravity="center"
                                    android:drawableLeft="@drawable/ic_send"
                                    android:drawablePadding="@dimen/xxhdpi_10"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/sign_up_otp_linear"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/xxhdpi_30"
                                android:visibility="visible"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/xxhdpi_20">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="@dimen/xxhdpi_175"
                                        android:layout_height="@dimen/xxhdpi_175"
                                        android:layout_centerHorizontal="true"
                                        android:src="@drawable/ic_otp_icon"/>

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_alignParentEnd="true"
                                        android:paddingLeft="@dimen/xxhdpi_10"
                                        android:paddingRight="@dimen/xxhdpi_10"
                                        android:background="@drawable/rect_circle"
                                        android:backgroundTint="@color/colorPrimaryDark">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/signup_timer_txt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/ubuntu_normal"
                                            android:gravity="center"
                                            android:text="00:00"
                                            android:layout_margin="@dimen/xxhdpi_5"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/t_xxh_18" />

                                    </RelativeLayout>


                                </RelativeLayout>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/xxhdpi_20"
                                    android:text="@string/otp_enter_msg"
                                    android:gravity="center"
                                    android:fontFamily="@font/ubuntu_normal"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/t_xxh_26"
                                    android:textColor="#848484"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/xxhdpi_20"
                                    android:gravity="center"
                                    android:weightSum="1">

                                    <androidx.appcompat.widget.AppCompatEditText
                                        android:id="@+id/edt_otp_sign_up"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:inputType="number"
                                        android:gravity="center"
                                        android:backgroundTint="@color/grey"
                                        android:fontFamily="@font/ubuntu_normal"
                                        android:hint="@string/otp"
                                        android:maxLines="1"
                                        android:textColorHint="#707070"
                                        android:textColor="@color/txt_clr"
                                        android:textSize="@dimen/t_xxh_22" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/resend_linear"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_marginTop="@dimen/xxhdpi_30">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Didnâ€™t receive code?"
                                        android:textSize="@dimen/t_xxh_22"
                                        android:textColor="#848484"/>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/resend_txt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Resend Code"
                                        android:textSize="@dimen/t_xxh_22"
                                        android:layout_marginLeft="@dimen/xxhdpi_10"
                                        android:textColor="#ff6200"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/xxhdpi_40"
                                    android:background="@drawable/rect_bor"
                                    android:gravity="center"
                                    android:layout_marginLeft="@dimen/xxhdpi_20"
                                    android:layout_marginRight="@dimen/xxhdpi_20"
                                    android:backgroundTint="@color/button_bg">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/btn_next_sign_up"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/ubuntu_normal"
                                        android:layout_marginLeft="@dimen/xxhdpi_20"
                                        android:layout_marginRight="@dimen/xxhdpi_20"
                                        android:paddingTop="@dimen/xxhdpi_20"
                                        android:paddingBottom="@dimen/xxhdpi_20"
                                        android:text="Verify Code"
                                        android:gravity="center"
                                        android:drawablePadding="@dimen/xxhdpi_20"
                                        android:drawableLeft="@drawable/ic_checkmark"
                                        android:layout_gravity="center"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/t_xxh_22" />

                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </ScrollView>

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>