<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.notifications.notificationDetail.NotificationDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/xxhdpi_20"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tab_profile"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/notify_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xxhdpi_10"
            android:textSize="@dimen/t_xxh_16"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="@string/title_chat"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xxhdpi_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notify_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/t_xxh_14"
                android:textColor="@color/txt_black"
                android:textStyle="bold"
                android:text="@string/title_chat"/>

            <TextView
                android:id="@+id/notify_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/t_xxh_14"
                android:layout_marginLeft="@dimen/xxhdpi_75"
                android:textColor="@color/txt_black"
                android:textStyle="bold"
                android:text="@string/title_chat"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/xxhdpi_10"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/notify_desc_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xxhdpi_30"
            android:textSize="@dimen/t_xxh_14"
            
            android:textColor="@color/txt_black"
            android:text="@string/title_chat"/>

    </LinearLayout>

</FrameLayout>